<%= form_tag '/products', method: :post do %>
<div>
  <%= label_tag :item, "Enter item here:" %>
  <%= text_area_tag :item %>
</div>

<div>
  <%= label_tag :description, "Enter description here:" %>
  <%= text_area_tag :description %>
</div>

<div>
  <%= label_tag :size, "Enter size here:" %>
  <%= text_area_tag :size %>
</div>

<div>
  <%= label_tag :price, "Enter price here:" %>
  <%= text_area_tag :price %>
</div>

<div>
  <%= submit_tag "Send product information:" %>
</div>

<% end %>