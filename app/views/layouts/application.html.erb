      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
    
<div class="row">    
    <div class="pull-left">
        <%= form_tag "/products/search", method: :post do %>
        <%= label_tag :search %>
        <%= text_field_tag :search %>
        <%= submit_tag "Search" %>
      <% end %>
    </div>
  </div>
<%= yield %>

</body>
</html>
